{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}}
                            -
                            {{#if duration.to}}
                            {{duration.from}}
                            {{else}}
                            (naw work)
                            {{/if}}
                        </div>

                        <br>

                        <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                        {{#unless company.url}}
                        <b>{{company.name}}</b>
                        <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                        {{/unless}}

                        <br><br>

                        <div>
                            <strong>Projects({{projectAmount}})</strong>
                        </div>
                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{name}}</div>
                                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                <br>
                                <div>
                                    <strong>
                                        <p>
                                            <hr>{{ about}}
                                            <hr>
                                        </p>
                                    </strong>
                                    <div>
                                        <strong>
                                            <hr> <em>Projects awards</em>
                                            <hr>
                                        </strong>
                                        <br>
                                        <div>
                                            {{#each awards}}
                                            <div>{{name}}</div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <hr>
                                <strong>
                                    <div>Projects stack({{awardsAmount}})</div>
                                </strong>
                                <hr>
                                {{#each stack}}
                                <br>
                                <div>{{name}}</div>
                                {{/each}}
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

