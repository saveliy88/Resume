{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <strong>
        <section>
            {{>title data="Web" big=true}}
        </section>
    </strong>
    {{#with web}}
    {{#each languages}}
    <p><strong>{{name}}</strong></p>
    <li>{{description}}</li>
    <P>
        {{#each elements}}
    <p><strong>{{name}}</strong></p>
    <li>{{description}}</li>
    {{#each attributes}}
    <p><strong>{{name}}</strong></p>
    <li>{{description}}</li>
    {{/each}}
    {{/each}}
    </P>
    <hr>
    <ul>
        {{#each functions}}
        <p><strong>{{name}}</strong></p>
        <li>{{description}}</li>
        {{#each parameters}}
        <p><strong>{{name}}</strong></p>
        <li>{{type}}</li>
        <li>{{description}}</li>
        {{/each}}
        {{/each}}
    </ul>
    <hr>
    {{/each}}
    {{/with}}

    </main>
</div>

