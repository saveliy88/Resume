{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            {{>title data="Excursion program" big=true}}
        </section>
        {{#with program}}
        {{#with excursion}}
        {{name}}<br>
        {{#with location}}
        {{city}},{{country}}<br>
        {{/with}}
        {{date}}
        <ul>
            <li>
                {{#each program}}
                {{name}},{{type}},{{duration}}<br>
                {{#with details}}
                {{#with museum}}
                <strong> {{name}}<br></strong>
                {{#with location}}
                {{address}},{{city}},{{country}}<br>
                {{/with}}
                {{#each exhibits}}
                {{name}},{{artist}},{{description}},

                {{/each}}
                {{/with}}
                {{/with}}
                {{/each}}
            </li>
        </ul>
        {{/with}}
        {{/with}}
    </main>
</div>

