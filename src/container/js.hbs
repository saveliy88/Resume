{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <strong>
        <section>
            <span class="badge bg-secondary"> {{>title data="JS" big=true}}</span>
        </section>
    </strong>
    <h1 style="color: chartreuse;">{{name}}</h1>
    {{description}}<br>
    {{#with history}}
    {{year}},{{founder}}
    {{/with}}<br>
    {{#each types}}
    <button type="button" class="btn btn-info">{{this}}</button>
    {{/each}}
    {{#with syntax}}
    <ul class="list-group">
        <li class="list-group-item">
            <h4>variables:</h4>{{variables}}
        </li><br>
        <li class="list-group-item">
            <h4>functions:</h4>{{functions}}
        </li><br>
        <li class="list-group-item">
            <h4>conditionals:</h4>{{conditionals}}
        </li><br>
        <li class="list-group-item">
            <h4>loops:</h4>{{loops}}
        </li><br>
        <li class="list-group-item">
            <h4>classes:</h4>{{classes}}
        </li><br>
    </ul>
    {{/with}}
    <hr>{{#each features}}
    <button type="button" class="btn btn-success">{{this}}</button>
    {{/each}}
    <br>
    <br>
    <ul>
        {{#each libraries}}
        <button type="button" class="btn btn-secondary">{{this}}</button>
        {{/each}}
    </ul>
    <hr>
    <ul>
        {{#each tools}}
        <button type="button" class="btn btn-primary">{{this}}</button>
        {{/each}}
    </ul>
    {{#each community}}
    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
        <button type="button" class="btn btn-primary">{{name}}</button>
        <button type="button" class="btn btn-primary">{{type}}</button>
    </div>
    {{/each}}

    </main>
</div>

